{
    "name": "amethyst/permission",
    "type": "library",
    "keywords": ["laravel", "amethyst", "amethyst-permission", "permission"],
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "amethyst/core": "0.2.*",
        "amethyst/owner": "0.2.*",
        "nicoswd/php-rule-parser": "^0.5.7",
        "railken/template": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "orchestra/testbench": "*",
        "amethyst/foo": "0.2.*"
    },
    "autoload": {
        "psr-4" : {
            "Amethyst\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Amethyst\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "amethyst": {
            "package": "permission",
            "namespace": "Amethyst"
        },
        "laravel": {
            "providers": [
                "Amethyst\\Providers\\PermissionServiceProvider"
            ]
        }
    }
}
